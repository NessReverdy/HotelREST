<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <!-- Таблица отелей -->
    <changeSet id="1" author="Anastasia">
        <createTable tableName="hotels">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="brand" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <!-- Адреса -->
    <changeSet id="2" author="Anastasia">
        <createTable tableName="address">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="house_number" type="INT"/>
            <column name="street" type="VARCHAR(255)"/>
            <column name="city" type="VARCHAR(255)"/>
            <column name="country" type="VARCHAR(255)"/>
            <column name="post_code" type="VARCHAR(20)"/>
            <column name="hotel_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="address"
                baseColumnNames="hotel_id"
                constraintName="fk_address_hotel"
                referencedTableName="hotels"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <!-- Контакты -->
    <changeSet id="3" author="Anastasia">
        <createTable tableName="contacts">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="phone" type="VARCHAR(50)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="hotel_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="contacts"
                baseColumnNames="hotel_id"
                constraintName="fk_contacts_hotel"
                referencedTableName="hotels"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <!-- Время заселения -->
    <changeSet id="4" author="Anastasia">
        <createTable tableName="arrival_time">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="check_in" type="VARCHAR(10)"/>
            <column name="check_out" type="VARCHAR(10)"/>
            <column name="hotel_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="arrival_time"
                baseColumnNames="hotel_id"
                constraintName="fk_arrival_time_hotel"
                referencedTableName="hotels"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <!-- Удобства -->
    <changeSet id="5" author="Anastasia">
        <createTable tableName="amenities">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Связующая таблица отель-удобство -->
    <changeSet id="6" author="Anastasia">
        <createTable tableName="hotel_amenities">
            <column name="hotel_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="amenity_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="hotel_amenities"
                baseColumnNames="hotel_id"
                constraintName="fk_hotel_amenities_hotel"
                referencedTableName="hotels"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="hotel_amenities"
                baseColumnNames="amenity_id"
                constraintName="fk_hotel_amenities_amenity"
                referencedTableName="amenities"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
